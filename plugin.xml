<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="%category.name"
            id="tool.test">
      </category>
      <view
            name="%view.name"
            icon="icons/sample.gif"
            category="tool.test"
            class="tool.test.views.ToolView"
            id="tool.test.views.TestView">
      </view>
   </extension>
   
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="tool.test.views.TestView">
         </view>
         
      </perspectiveExtension>
   </extension>
   
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   
   
	<extension point="org.eclipse.ui.commands">
		<command  
			id="methodCallCommandd" name="メソッド呼び出し可視化"/>
	</extension>

	<extension point="org.eclipse.ui.handlers">
		<handler
			commandId="methodCallCommandd"
			class="makeCallGraph2.MyHandler">
		</handler>
	</extension>
   
	<extension
		point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:org.eclipse.ui.popup.any">
			<command
				commandId="methodCallCommandd"
				style="push">
				<visibleWhen>
					<with variable="activeMenuSelection">
						<iterate ifEmpty="false">
							<adapt type="org.eclipse.core.resources.IProject">
							</adapt>
						</iterate>
					</with>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>

	<extension point="org.eclipse.ui.commands">
		<command  
			id="makeGraph" name="メソッド呼び出しを可視化する"/>
	</extension>

	<extension point="org.eclipse.ui.handlers">
		<handler
			commandId="makeGraph"
			class="makeCallGraph2.MyClassHandler">
		</handler>
	</extension>
   
	<extension
		point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:org.eclipse.ui.popup.any">
			<command
				commandId="makeGraph"
				style="push">
				<visibleWhen>
					<with variable="activeMenuSelection">
						<iterate ifEmpty="false">
							<adapt type="org.eclipse.jdt.core.ICompilationUnit">
							</adapt>
						</iterate>
					</with>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>

</plugin>
